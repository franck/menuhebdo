<%= form_for [:private, @recipe] do |f| %>
  <%= render "shared/error_messages", target: @recipe %>

  <div>
    <%= f.label :name, "Nom de la recette", class: "desc" %>
    <%= f.text_field :name, autofocus: true, size: 35 %>
  </div>

  <div>
    <%= f.submit "Enregistrer" %>
    <%= link_to "annuler", private_recipes_path %>
  </div>
<% end %>
